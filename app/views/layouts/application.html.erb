<!DOCTYPE html>
<html>
<head>
  <title>TasteSpottingClone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <div class="three columns sidebar">
      <h2>Tasty Bit</h2>

      <ul>
      <% if !current_user.nil? %>
        <li>
          Logged in as: <%= current_user.username %>
          <%= button_to "Logout", session_url, :method => :delete %>
        </li>
        <strong>
        <li><%= link_to("Post Index", "#/") %></li>
        <li><%= link_to("Users", "#users") %></li>
        <li><%= link_to("New Post", "#posts/new") %></li>
        
        <li><h4>Categories:</h4></li>
        <% Category.all.each do |category| %></li>
          <li>
            <%= link_to("#{category.name}","#category/#{category.id}" )%>
          </li>
        <% end %>
        <!-- <li><h4>Popular:</h4></li> -->
        </strong>
      <% else %>
        <strong>
        <li><%= link_to("Post Index", root_url) %></li>
        <li><%= link_to("Sign up", new_user_url)%></li>
        <li><%= link_to("Log in", new_session_url)%></li>
        </strong>
      <% end %>
      </ul>
    </div>
    <div class="sixteen columns offset-by-one content">
      <%= yield %>
    </div>
  </div>
</body>
</html>
