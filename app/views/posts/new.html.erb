<h2>Create a new post</h2>

<%= form_for @post do |f| %>
  <%= f.file_field :post_photo %><br />
  
  <%= f.label :link %>:
  <%= f.text_field :link %><br />

  <%= f.label :description %>:
  <%= f.text_field :description %><br />

  <%= f.submit %>
<% end %>

