<div>
  <h3>Create new post</h3>
</div>
<div class='six columns'>
  <p><strong>Instructions:</strong><br>Please create a new tasty post by uploading an image of your choice, adding a link to the desired blog/post/news article, and select a few categories that it may belong to. 
  </p>
<div>
<form id="new-post-form" enctype="multipart/form-data">
  <label for="post_post_photo">Image</label>
  <input
    type="file"
    name="post[post_photo]" multiple
    id="post_post_photo">
  <br>
  <br>
  <label for="post_link">Link</label>
  <input
    type="text"
    name="post[link]"
    id="post_link">

  <label for="post_description">Description</label>
  <input
    type="text"
    name="post[description]"
    id="post_description">

  <strong>Select catagories:</strong>
  <br>

  <% categoriesCollection.each( function(category){ %>
    <% html_id = "category_member_id" + category.get("id") %>
    <label for="<%= html_id %>">
      <input type="checkbox"
        name="post[category_ids][]"
        value="<%= category.get("id") %>"
        id="<%= html_id %>">
      <span><%= category.get("name") %></span>
    </label>
  <% }); %>
  
  <br>
  <input type="submit" value="Create Post">
</form>